<%- include("../templat/encabezado.ejs") %>
<%- include("../templat/menu.ejs") %>

<div class="container">
    <div class="card mt-5">
        <div class="card-header">
            <h1>PRODUCTOS DISPONILES</h1>
        </div>
    
        <div class="card-body"></div>
        <table>
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Nombre</th>
                    <th>Precio</th>
                    <th>Categor√≠a</th>
                    <th>Stock</th>
                    <th>Foto</th>
                    <th>Editar/Borrar</th>
                </tr>
            </thead>
            <tbody>
                <% products.forEach((producto) => { %>
                    <tr>
                        <td><%= producto.id %></td>
                        <td><%= producto.nombre %></td>
                        <td><%= producto.precio %></td>
                        <td><%= producto.categoria %></td>
                        <td><%= producto.stock %></td>
                        <td>
                            <img src="/images/<%= producto.foto %>" width="50px" alt="Foto de producto">
                        </td>
                        <td>
                            <button class="btn btn-editar" onclick="location.href='/editarProducto/<%= producto.id %>'">Editar</button>
                            <button class="btn btn-borrar" onclick="location.href='/borrarProducto/<%= producto.id %>'">Borrar</button>
                        </td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
        
        <div class="card-footer"></div>
    </div>
</div>

<style>
    .container {
        margin-top: 20px;
    }

    .btn {
        cursor: pointer;
        border: none;
        border-radius: 5px;
        padding: 6px 12px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 14px;
        margin: 2px 2px;
    }

    .btn-editar {
        background-color: #3498db;
        color: #fff;
    }

    .btn-borrar {
        background-color: #e74c3c;
        color: #fff;
    }

    td img {
        max-width: 100%;
        height: auto;
    }

    .card {
        width: 80%;
        margin: 0 auto;
        background-color: #fff;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    .card-header {
        background-color: #444cf7;
        color: #fff;
        padding: 15px;
        text-align: center;
        border-radius: 10px 10px 0 0;
    }

    table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
    }

    th, td {
        border: 1px solid #ddd;
        padding: 12px;
        text-align: left;
    }

    th {
        background-color: #444cf7;
        color: #fff;
    }

    tr:nth-child(even) {
        background-color: #f2f2f2;
    }

    a {
        display: inline-block;
        padding: 6px 12px;
        text-decoration: none;
        border-radius: 5px;
        margin-right: 5px;
        color: #fff;
    }

    a.editar {
        background-color: #2ecc71;
    }

    a.borrar {
        background-color: #e74c3c;
    }
</style>
