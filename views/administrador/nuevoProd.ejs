<%- include("../templates/menu") %>

<div class="container mt-5">
    <form action="/nuevoProd" method="post" enctype="multipart/form-data">
        <div class="card">
            <div class="card-header">
                <h1>Nuevo producto</h1>
            </div>
            <div class="card-body">
                <input class="form-control mt-3" type="text" name="nombre" id="nombre" placeholder="Nombre" autofocus>
                <input class="form-control mt-3" type="text" name="categoria" id="categoria" placeholder="Categoria">
                <input class="form-control mt-3" type="text" name="precio" id="precio" placeholder="Precio">
                <input class="form-control mb-3" type="text" name="stock" id="stock" placeholder="Stock">
                <input class="form-control mb-3" type="file" name="foto" id="foto">
            </div>
            <div class="card-footer">
                <button class="form-control btn-primary">Guardar Producto</button>
            </div>
        </div>
    </form>
</div>

