<%- include("../templat/encabezado") %>
<%- include("../templat/menu") %>

<div class="container mt-5">
    <form action="/nuevoProd" method="post" enctype="multipart/form-data">
        <div class="card">
            <div class="card-header">
                <h1>NUEVO PRODUCTO</h1>
            </div>
            <div class="card-body">
                <input class="form-control mt-3" type="text" name="nombre" id="nombre" placeholder="Nombre" autofocus>
                <input class="form-control mt-3" type="text" name="categoria" id="categoria" placeholder="Categoria">
                <input class="form-control mt-3" type="text" name="precio" id="precio" placeholder="Precio">
                <input class="form-control mb-3" type="text" name="stock" id="stock" placeholder="Stock">
                <input class="form-control mb-3" type="file" name="foto" id="foto">
            </div>
            <div class="card-footer">
                <button class="btn btn-guardar">Guardar Producto</button>
            </div>
        </div>
    </form>
</div>



<style>
    .container {
        margin-top: 20px;
    }

    .card {
        width: 60%;
        margin: 0 auto;
        background-color: #fff;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    .card-header {
        background-color: #444cf7;
        color: #fff;
        padding: 15px;
        text-align: center;
        border-radius: 10px 10px 0 0;
    }

    .card-body {
        padding: 20px;
    }

    .form-control {
        width: 100%;
        padding: 10px;
        margin-top: 10px;
        margin-bottom: 10px;
        border: 1px solid #ccc;
        border-radius: 5px;
        box-sizing: border-box;
    }

    .form-control:focus {
        outline: none;
        border-color: #444cf7;
    }

    .form-control[type="file"] {
        cursor: pointer;
    }

    .card-footer {
        padding: 15px;
        text-align: center;
        border-radius: 0 0 10px 10px;
    }

    .btn {
        padding: 10px 20px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        font-weight: bold;
    }

    .btn-guardar {
        background-color: #2ecc71; /* Verde */
        color: white;
    }
</style>
