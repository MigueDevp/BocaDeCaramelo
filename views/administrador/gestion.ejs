

<%- include("../templat/encabezado.ejs") %>
<%- include("../templat/menu.ejs") %>

<div class="container">
    <div class="card mt-5">
        <div class="card-header">
            <h1>COMPRAS REALIZADAS</h1>
        </div>

        <div class="card-body"></div>
        <table>
         
            <thead>
                <tr>
                    <th>Id del Usuario</th>
                    <th>Nombre del Producto</th>
                    <th>Tamaño del Producto</th>
                    <th>Cantidad</th>
                    
                </tr>
            </thead>
            <tbody>
                <% compras.forEach((compra) => { %>
                    <tr>
                        <td><%= compra.id %></td>
                        <td><%= compra.producto %></td>
                        <td><%= compra.tamaño %></td>
                        <td><%= compra.cantidad %></td>
                        
                    </tr>
                <% }); %>
            </tbody>
        </table>

        <div class="card-footer"></div>
    </div>
</div>

<style>
    
    .container {
        margin-top: 20px;
    }

    .card {
        width: 80%;
        margin: 0 auto;
        background-color: #fff;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    .card-header {
        background-color: #444cf7;
        color: #fff;
        padding: 15px;
        text-align: center;
        border-radius: 10px 10px 0 0;
    }

    table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
    }

    th, td {
        border: 1px solid #ddd;
        padding: 12px;
        text-align: left;
    }

    th {
        background-color: #444cf7;
        color: #fff;
    }

    tr:nth-child(even) {
        background-color: #f2f2f2;
    }

    /* Estilo para las imágenes dentro de las celdas */
    td img {
        max-width: 100%;
        height: auto;
    }

    /* Estilo para los botones de editar y borrar */
    .btn-editar, .btn-borrar {
        cursor: pointer;
        border: none;
        border-radius: 5px;
        padding: 6px 12px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 14px;
        margin: 2px 2px;
    }

    .btn-editar {
        background-color: #3498db;
        color: #fff;
    }

    .btn-borrar {
        background-color: #e74c3c;
        color: #fff;
    }
