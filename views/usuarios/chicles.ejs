<%- include("../templates/encabezado.ejs") %>
<%- include("../templates/menu.ejs") %>

<div class="container-products mt-5">
    <div class="categoria text-center">
        <h2 class="mb-4" style="color: #8a2be2; font-weight: bold;">CHICLES</h2>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-6 mb-4">
            <div class="card">
                <form action="/realizarCompra" method="post" class="p-4">
                    <label for="producto" style="color: #8a2be2;">Chicle:</label>
                    <select name="producto" id="producto" class="form-control">
                        <option value="Clorets">Clorets</option>
                        <option value="Bubalo">Bubalo</option>
                        <option value="Canelitas">Canelitas</option>
                    </select>

                    <label for="tamaño" style="color: #8a2be2;">Tamaño:</label>
                    <select name="tamaño" id="tamaño" class="form-control">
                        <option value="Chico">Chico</option>
                        <option value="Mediano">Mediano</option>
                    </select>

                    <label for="cantidad" style="color: #8a2be2;">Cantidad:</label>
                    <input type="number" name="cantidad" id="cantidad" min="1" value="1" class="form-control">

                    <input type="submit" value="Comprar" class="btn btn-primary mt-3">
                </form>
                <!-- Fin del formulario de compra -->
            </div>
        </div>
    </div>
</div>

<style>
    /* Estilos generales */
    body {
        font-family: 'Arial', sans-serif;
        background-color: #f4f4f4;
        color: #333;
    }

    .container-products {
        margin-top: 20px;
    }

    .card {
        border: 1px solid #8a2be2; /* Color morado */
        border-radius: 12px;
        overflow: hidden;
        transition: box-shadow 0.3s;
    }

    .card:hover {
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    /* Estilos específicos para la categoría */
    .categoria {
       
        margin-left: 200px;
        margin-right: 200px;
    }

    .categoria h2 {
        color: #8a2be2; /* Color morado */
        font-weight: bold;
    }

    /* Estilos para el formulario de compra */
    form {
        margin-top: 10px;
        display: flex;
        flex-direction: column;
        padding: 20px;
    }

    label {
        margin-top: 5px;
        font-weight: bold;
    }

    select, input {
        margin-bottom: 10px;
        padding: 8px;
        border: 1px solid #8a2be2; /* Color morado */
        border-radius: 8px;
    }

    .btn-primary {
        background-color: #444cf7; /* Color morado */
        color: #fff;
        border: 1px solid #444cf7; /* Color morado */
        border-radius: 8px;
        padding: 10px;
        cursor: pointer;
        transition: background-color 0.3s;
    }

    .btn-primary:hover {
        background-color: #3a40c2; /* Color morado oscuro */
    }

</style>
