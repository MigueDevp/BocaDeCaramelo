<%- include("../templates/encabezado.ejs") %>
<%- include("../templates/menu.ejs") %>

<style>
    /* Estilos CSS para la página de edición de usuario */

    .container {
        max-width: 600px;
        margin: auto;
        margin-top: 50px;
    }

    .card {
        border: 1px solid #ccc;
        border-radius: 10px;
        overflow: hidden;
    }

    .card-header {
        background-color: #444cf7;
        color: white;
        padding: 15px;
        text-align: center;
        border-radius: 5px;
    }

    .card-body {
        padding: 20px;
    }

    .form-control {
        width: 100%;
        padding: 10px;
        margin-top: 10px;
        margin-bottom: 10px;
        border: 1px solid #ccc;
        border-radius: 5px;
    }

    .mb-3 {
        margin-bottom: 15px;
    }

    .btn-primary {
        background-color: #444cf7;
        color: white;
        border: none;
        padding: 10px;
        cursor: pointer;
        border-radius: 5px;
        width: 100%;
    }

    .img-preview {
        margin-top: 10px;
        max-width: 100%;
        height: auto;
    }
</style>

<div class="container mt-5">
    <form action="/editarUsuario" method="post" enctype="multipart/form-data">
        <div class="card">
            <div class="card-header">
                <h1>Modificar usuario</h1>
            </div>
            <div class="card-body">
                <input type="hidden" name="id" id="id" value="<%=usuario.id%>">
                <input type="hidden" name="passwordAnterior" id="passwordAnterior" value="<%= usuario.password %>">
                <input type="hidden" name="salt" id="salt" value="<%=usuario.salt%>">
                <input type="hidden" name="fotoVieja" id="fotoVieja" value="<%=usuario.foto%>">
                
                <input class="form-control mt-3" name="nombre" id="nombre" placeholder="Nombre" value="<%= usuario.nombre %>" autofocus>
                <input class="form-control mt-3" type="text" name="usuario" id="usuario" placeholder="Usuario" value="<%= usuario.usuario %>">
                <input class="form-control mt-3" type="text" name="password" id="password" placeholder="Password nuevo o dejarlo asi" value="<%= usuario.password %>">
                
                <label for="foto" class="mt-3">Subir nueva foto de perfil:</label>
                <input class="form-control mb-3" type="file" name="foto" id="foto">
                <img src="/images/<%= usuario.foto %>" width="100px" alt="Foto Actual" class="img-preview">
            </div>
            <div class="card-footer">
                <button class="form-control btn-primary">GUARDAR CAMBIOS</button>
            </div>
        </div>
    </form>
</div>


