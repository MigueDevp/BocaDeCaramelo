<%- include("../templates/encabezado.ejs") %>
<style>




    body {
        font-family: Arial, Helvetica, sans-serif;
        margin: 3px;
        padding: 0;
        width: 100%;
        width: 100%;
height: 100%;
/* Add your background pattern here */
background-color: #e5e5f7;
background-image: radial-gradient(#444cf7 10%, transparent 10%),
                  radial-gradient(#444cf7 10%, transparent 10%);
background-size: 100px 100px;
background-position: 0 0, 50px 50px;
    }

    header {
        
        padding: 20px;
        text-align: center; /* Alinear el texto al centro */

        

    }

    nav {
        display: flex;
        justify-content: center; /* Centrar los elementos horizontalmente */
        align-items: center; /* Centrar los elementos verticalmente */
        background-color: #444cf7; /* Fondo pastel */
        border-radius: 20px; /* Bordes curvos */
        overflow: hidden; /* Evitar desbordamiento de bordes curvos */


        
    }

    .menu-item {
        text-decoration: none;
        color: #ffffff; /* Color de enlaces en tono pastel */
        font-size: 22px; /* Tamaño de fuente más pequeño */
        transition: color 0.3s;
        transition: transform 0.3s;
        padding: 25px 30px; /* Espaciado interno */
        margin: 0 5px; /* Espaciado entre elementos del menú */
        border-radius: 14px 14px; /* Bordes curvos */
        font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
        font-style: bold;
    }

    .menu-item:hover  {
        background-color: rgb(229, 233, 238);   
        color: #444cf7;
        text-decoration: none;
        font-size: 23px;
        transform: scale(1.1);
        border-radius: 14px;
    }

    .menunav {
        width: 100%;
        height: 50px;
        border-radius: 20px; /* Bordes curvos */
        overflow: hidden; /* Evitar desbordamiento de bordes curvos */
    }

    .user-icon {
        background-color: white;   
        color: #444cf7;
        text-decoration: none;
        font-size: 22px;
        border-radius: 14px 14px;
        padding: 3px;
        transition: transform 0.3s;
        font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
        font-style: bold;
    }

    .user-icon:hover {
        transform: scale(1.1); /* Escalar el elemento al 110% al pasar el ratón por encima */
        text-decoration: none;
    }

    

</style>
</head>
<body>

<header>
    <nav class="menunav">
        
        <a class="menu-item" href="/inicio/<%=user.id%>">INICIO</a>
        <a class="menu-item" href="/comprar/<%=user.id%>">COMPRAR</a>
        <a class="menu-item" href="/ubicacion/<%=user.id%>">UBICACION</a>
        <a class="menu-item" href="/nosotros/<%=user.id%>">NOSOTROS</a>
        <a class="menu-item" href="/perfil/<%=user.id%>">PERFIL</a>
        
        <a class="user-icon" href='/cerrarSesion'">CERRAR SESION</a>
    </nav>
</header>

</body>
</html>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-4">
            <div class="card p-4">
                <form action="/realizarCompra" method="post">
                    <label for="producto">Producto:</label>
                    <input type="hidden" name="id" id="id" value="<%=user.id%>">
                        <input type="hidden" name="nombre" id="nombre" value="<%=user.nombre%>">
                    <select name="producto" id="producto" class="form-control">
                        
                        <option value="Chocolate">Chocolate</option>
                        <option value="Cacahuates">Cacahuates</option>
                        <option value="Paleta">Paleta</option>
                        <option value="Bombones">Bombones</option>
                        <option value="Pelon Rico">Pelon Rico</option>
                    </select>

                    <!-- Tamaño -->
                    <label for="tamaño">Tamaño:</label>
                    <select name="tamaño" id="tamaño" class="form-control">
                        <option value="Normal">Normal</option>
                    </select>

                    <label for="cantidad">Cantidad:</label>
                    <input type="number" name="cantidad" id="cantidad" min="1" value="1" class="form-control">

                    <input type="submit" value="Comprar" class="btn btn-primary mt-3">
                </form>
                <!-- Fin del formulario de compra -->
            </div>
        </div>
    </div>
</div>

<style>
    /* Estilos generales */
    body {
        font-family: 'Arial', sans-serif;
        background-color: #f4f4f4;
        color: #333;
    }

    /* Estilos para el formulario de compra */
    form {
        margin-top: 10px;
        display: flex;
        flex-direction: column;
    }

    label {
        margin-top: 5px;
        font-weight: bold;
    }

    select,
    input {
        margin-bottom: 10px;
        padding: 8px;
    }

    .btn-primary {
        background-color: #444cf7; /* Color morado */
        color: #fff;
        border: 1px solid #444cf7; /* Color morado */
        border-radius: 8px;
        padding: 10px;
        cursor: pointer;
        transition: background-color 0.3s;
    }

    .btn-primary:hover {
        background-color: #3a40c2; /* Color morado oscuro */
    }

    /* Estilos para el contenedor de la tarjeta */
    .card {
        border: 1px solid #ddd;
        border-radius: 12px;
        overflow: hidden;
        transition: box-shadow 0.3s;
    }

    .card:hover {
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }
</style>
