<%- include("../templates/encabezado") %>
<%- include("../templates/menu") %>

<style>
    .perfil-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        height: 100vh;
        color: white;
        width: 100%;
  height: 100%;
  background-color: #e5e5f7;
  background-image: radial-gradient(#444cf7 10%, transparent 10%),
                      radial-gradient(#444cf7 10%, transparent 10%);
  background-size: 100px 100px;
  background-position: 0 0, 50px 50px;
    }

    .perfil-box {
        padding: 20px;
        border-radius: 10px;
        background-color: #444cf7; /* Morado más claro, puedes cambiar el color según tus preferencias */
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.5);
        text-align: center;
        margin-top: 100px;
        
    }

    img {
        width: 200px;
        height: 200px;
        border-radius: 50%;
        margin-bottom: 20px;
    }

    p {
        margin: 10px 0;
    }

    .btn-container {
        display: flex;
        gap: 10px;
        margin-top: 20px;
    }

    .btn {
        padding: 10px 20px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        font-weight: bold;
    }

    .btn-success {
        background-color: #2ecc71; /* Verde */
        color: white;
    }

    .btn-danger {
        background-color: #e74c3c; /* Rojo */
        color: white;
    }

    .btn-container {
        display: flex;
        gap: 10px;
        margin-top: 20px;
        
    }

    .btn {
        padding: 10px 20px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        font-weight: bold;
    }

    .btn-success {
        background-color: #2ecc71; /* Verde */
        color: white;
    }

    .btn-danger {
        background-color: #e74c3c; /* Rojo */
        color: white;
    }

    .btn-cerrar-sesion {
        background-color: #3498db; /* Azul */
        color: white;
        margin-top:20px;
        margin-left:750px;
        width: 200px;
    }
</style>

<div class="perfil-container">
    <% if (user) { %>
        <div class="perfil-box">
            <img src="/images/<%= user.foto %>" alt="Foto de perfil">
            <h2><%= user.nombre %></h2>
            <p>ID: <%= user.id %></p>
            <p>Usuario: <%= user.usuario %></p>
            <p>Password: ******* </p>

            <div class="btn-container">
                <a href="/editarPerfil/<%= user.id %>" class="btn btn-success">Editar Perfil</a>
                <!-- Botón para borrar perfil -->
                <a href="/borrarPerfil/<%= user.id %>" class="btn btn-danger">Borrar Perfil</a>
            </div>
        </div>

    </div>
    <a href="/" class="btn btn-cerrar-sesion">Cerrar Sesión</a>
</div>

    <% } else { %>
        <p>Error al cargar el perfil</p>
    <% } %>
</div>
