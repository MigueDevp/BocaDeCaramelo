        text-align: center;
        margin-top: 100px;
        
    }

    img {
        width: 200px;
        height: 200px;
        border-radius: 50%;
        margin-bottom: 20px;
    }

    p {
        margin: 10px 0;
    }

    .btn-container {
        display: flex;
        gap: 10px;
        margin-top: 20px;
    }

    .btn {
        padding: 10px 20px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        font-weight: bold;
    }

    .btn-success {
        background-color: #2ecc71; /* Verde */
