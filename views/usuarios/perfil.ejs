<div class="perfil-container">
    <% if (user) { %>
        <div class="perfil-box">
            <img src="/images/<%= user.foto %>" alt="Foto de perfil">
            <h2><%= user.nombre %></h2>
            <p>ID: <%= user.id %></p>
            <p>Usuario: <%= user.usuario %></p>
            <p>Password: ******* </p>

            <div class="btn-container">
                <a href="/editarPerfil/<%= user.id %>" class="btn btn-success">Editar Perfil</a>
                <!-- Botón para borrar perfil -->
                <a href="/borrarPerfil/<%= user.id %>" class="btn btn-danger">Borrar Perfil</a>
            </div>
        </div>

    </div>
    <a href="/" class="btn btn-cerrar-sesion">Cerrar Sesión</a>
</div>

    <% } else { %>
        <p>Error al cargar el perfil</p>
    <% } %>
</div>
