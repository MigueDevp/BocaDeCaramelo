<%- include("../templates/encabezado.ejs") %>
<%- include("../templates/menu.ejs") %>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form action="/realizarCompra" method="post" class="p-4 bg-light border rounded">
                <label for="producto">Producto:</label>
                <select name="producto" id="producto" class="form-control">
                    <option value="Maruchan">Maruchan</option>
                    <option value="Pizza">Pizza</option>
                    <option value="Alitas">Alitas</option>
                    <option value="Hamburguesa">Hamburguesa</option>
                    <option value="Papas a la francesa">Papas a la francesa</option>
                </select>

                <!-- Tamaño -->
                <label for="tamaño">Tamaño:</label>
                <select name="tamaño" id="tamaño" class="form-control">
                    <option value="Normal">Normal</option>
                    <option value="Grande">Grande</option>
                </select>

                <label for="cantidad">Cantidad:</label>
                <input type="number" name="cantidad" id="cantidad" min="1" value="1" class="form-control">

                <input type="submit" value="Comprar" class="btn btn-primary mt-3">
            </form>
            <!-- Fin del formulario de compra -->
        </div>
    </div>
</div>

<style>
    /* Estilos generales */
    body {
        font-family: 'Arial', sans-serif;
        background-color: #f4f4f4;
        color: #333;
    }

    /* Estilos para el formulario de compra */
    form {
        margin-top: 10px;
        display: flex;
        flex-direction: column;
    }

    label {
        margin-top: 5px;
        font-weight: bold;
    }

    select,
    input {
        margin-bottom: 10px;
        padding: 8px;
    }

    .btn-primary {
        background-color: #444cf7; /* Color morado */
        color: #fff;
        border: 1px solid #444cf7; /* Color morado */
        border-radius: 8px;
        padding: 10px;
        cursor: pointer;
        transition: background-color 0.3s;
    }

    .btn-primary:hover {
        background-color: #3a40c2; /* Color morado oscuro */
    }
</style>
